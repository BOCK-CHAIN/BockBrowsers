{
  "name": "bock_browser",
  "version": "1.0.0",
  "description": "A custom Electron-based web browser",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron . --disable-features=Quic",
    "server": "node server.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.bock.browser",
    "productName": "Bock Browser",
    "forceCodeSigning": false,
    "files": [
      "pages/**/*",
      "styles/**/*",
      "scripts/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/axios/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    }
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "firebase": "^12.1.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0"
  }
}
